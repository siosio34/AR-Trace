<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="7dp">
        <ImageView
            android:id="@+id/ar_mixview_review_user_profile"
            android:layout_width="36dp"
            android:layout_height="36dp" />
        <TextView
            android:id="@+id/ar_mixview_review_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="김영수"
            android:textSize="14sp"
            android:textColor="#FFFFFFFF"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:background="#F3FFFFFF">
        <ImageView
            android:id="@+id/ar_mixview_review_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/ar_mixview_review_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="42dp"
            android:gravity="left|top"
            android:paddingTop="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textSize="14sp"
            android:textColor="#A5000000"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">
            <TextView
                android:id="@+id/ar_mixview_review_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textSize="12sp"
                android:textColor="#5A000000"/>
            <LinearLayout
                android:id="@+id/ar_mixview_review_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">
                <ImageView
                    android:id="@+id/ar_mixview_review_like_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_like_cancel"/>
                <TextView
                    android:id="@+id/ar_mixview_review_like_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="좋아요"
                    android:textSize="12sp"
                    android:textColor="#5A000000" />
                <TextView
                    android:id="@+id/ar_mixview_review_like_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="12sp"
                    android:textColor="#5A000000" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>