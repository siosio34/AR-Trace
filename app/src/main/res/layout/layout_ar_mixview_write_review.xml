<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#BB999999">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true">
                    <Button
                        android:id="@+id/ar_mixview_write_review_back"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/icon_back_"/>
                    <TextView
                        android:id="@+id/ar_mixview_write_review_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="2017년 1월 2일"
                        android:textSize="20sp"
                        android:textColor="#FFFFFF"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text=", 자취 남기기"
                        android:textSize="20sp"
                        android:textColor="#FFFFFF"/>
                </LinearLayout>
                <Button
                    android:id="@+id/ar_mixview_write_review_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_alignParentRight="true"
                    android:background="@android:color/transparent"
                    android:text="등록"
                    android:textColor="#6CE180"/>
            </RelativeLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#878785" />

            <!--현재 위치-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="30dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/icon_flaged_position"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="3dp"
                        android:text="현재 위치"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:background="#EEEEEE"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/ar_mixview_write_review_axis"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="좌표"
                            android:textColor="#989898"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="37 14 52.4N 127 04 36.3E"
                            android:textColor="#CDCDCD"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:orientation="vertical">
                        <View
                            android:layout_width="2dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_gravity="center_horizontal"
                            android:background="#808080"/>
                        <ImageView
                            android:id="@+id/ar_mixview_write_review_middle_img"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/icon_rhombus_left_chosen"/>
                        <View
                            android:layout_width="2dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_gravity="center_horizontal"
                            android:background="#808080"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ar_mixview_write_review_location"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="장소"
                            android:textColor="#989898"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="스타벅스 경희대국제캠퍼스점"
                            android:textColor="#CDCDCD"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!--사진,동영상-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="30dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/icon_camera"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="3dp"
                        android:text="사진•동영상"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#EEEEEE">
                    <TextView
                        android:id="@+id/ar_mixview_write_review_picture"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="40dp"
                        android:gravity="center"
                        android:background="@android:color/transparent"
                        android:text="사진"
                        android:textSize="20sp"
                        android:textColor="#6CE180">
                    </TextView>
                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="#808080" />
                    <TextView
                        android:id="@+id/ar_mixview_write_review_video"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="40dp"
                        android:gravity="center"
                        android:background="@android:color/transparent"
                        android:text="동영상"
                        android:textSize="20sp"
                        android:textColor="#6CE180">
                    </TextView>
                </LinearLayout>
            </LinearLayout>

            <!--글-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="30dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/icon_pencil"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="3dp"
                        android:text="글"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF"/>
                    <TextView
                        android:id="@+id/ar_mixview_write_review_numberoftext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="3dp"
                        android:text="(0/500)"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF"/>
                </LinearLayout>
                <EditText
                    android:id="@+id/ar_mixview_write_review_content"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="#EEEEEE"
                    android:gravity="top|left"
                    android:padding="20dp"
                    android:hint="나의 발자취를 글로 남기세요."
                    android:textColorHint="#B9B8B6">
                </EditText>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>